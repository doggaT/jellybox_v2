<div class="container text-white">
  <br/>
  <br/>
  <p style="color: green"><%= notice %></p>
  <br/>
  <br/>

  <div class="d-inline-flex align-items-center w-100 justify-content-between">
    <h1>Directories</h1>
      <%= button_to "New directory", new_directory_path, method: :get, class: "btn btn-outline-light me-2" %>
  </div>

  <table class="table table-dark table-hover" id="directories">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Date Created</th>
      <th scope="col">Date Modified</th>
    </tr>
    </thead>
    <tbody class="table-group-divider">
  <% if @directories.present? %>
      <% @directories.each_with_index do |directory, index| %>
        <tr>
          <th scope="row"> <%= index + 1 %> </th>
          <td> <%= link_to directory.name.capitalize, directory, class: "link-light" %> </td>
          <td> <%= directory.created_at %> </td>
          <td> <%= directory.updated_at %> </td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>